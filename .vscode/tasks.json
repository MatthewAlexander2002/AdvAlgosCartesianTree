{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake --build build --target main",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task for building using CMake"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/build/output/main",
            "group": "none",
            "dependsOn": "build",
            "problemMatcher": []
        }
    ]
}
